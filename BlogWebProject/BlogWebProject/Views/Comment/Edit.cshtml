@model ServiceProject.ViewModels.CommentCE_VM
@{
    ViewData["Title"] = "Edit";
}

<head>
    <link rel="stylesheet" href="~/css/edit.css" />
</head>


<h4>Edit Comment</h4>

@using (Html.BeginForm("Edit", "Blog", FormMethod.Post))
{

    @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.LabelFor(model => model.Content)
        @Html.TextAreaFor(model => model.Content, new { @class = "form-control", @rows = 10, @cols = 50 })
        @Html.ValidationMessageFor(model => model.Content)
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        @Html.ActionLink("Cancel", "Index", "Comment", new { postId = Model.PostId }, new { @class = "btn btn-default" })
    </div>
}